{
    "restartable": "rs",
    "ignore": [".git", "node_modules/", "dist/", "coverage/"],
    "watch": ["src/"],
    "execMap": {
      "ts": "node --experimental-specifier-resolution=node --loader ts-node/esm",
      "test": "node -r tsconfig-paths/register -r ts-node/register --experimental-specifier-resolution=node --loader ts-node/esm"
    },
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
}